{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "mqtt-pod-9838"
  },
  "spec": {
    "containers": [{
      "image":
      "eu.gcr.io/ysennoun-iot/features:19.03.8",
      "name": "mqtt-pod-980038",
      "args": ["/bin/sh", "-c", "mosquitto_pub  -d -u indexer -P 3ywbCs2uB4 -h 34.91.170.150 -p 8883 -t \"iot/farming\" -m '{\"device\": \"R2D2\", \"timestamp\": \"2020-03-31T12:48:54Z\", \"temperature\": 11, \"pressure\": 10, \"moisture\": 10}' --cafile /etc/ssl/vernemq/tls.crt;sleep 120"
      ],
      "volumeMounts": [{
        "name": "vernemq-certificates",
        "mountPath": "/etc/ssl/vernemq/tls.crt",
        "subPath": "tls.crt",
        "readOnly": true
      }]
    }],
    "volumes": [{
      "name": "vernemq-certificates",
      "secret": {
        "secretName": "vernemq-certificates-secret"
      }
    }],
    "restartPolicy": "Never"
  }
}