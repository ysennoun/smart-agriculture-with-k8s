apiVersion: serving.knative.dev/v1
kind: Service
metadata:
  name: ${ENVIRONMENT}-es-to-parquet
  labels:
    purpose: demonstrate-es-to-parquet
    serving.knative.dev/visibility: cluster-local
spec:
  template:
    spec:
      containers:
        - image: ${CONTAINER_REPOSITORY}/${PROJECT_NAME}/${ENVIRONMENT}-es-to-parquet:${VERSION}

---

apiVersion: sources.eventing.knative.dev/v1alpha1
kind: CronJobSource
metadata:
  name: ${ENVIRONMENT}-cronjob-es-to-parquet
spec:
  schedule: "0 * * * *" # every hour
  sink:
    apiVersion: serving.knative.dev/v1
    kind: Service
    name: ${ENVIRONMENT}-es-to-parquet