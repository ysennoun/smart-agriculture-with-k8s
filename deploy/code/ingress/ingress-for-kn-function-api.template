apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ${ENVIRONMENT}-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - http:
        paths:
          - path: /(.*)
            backend:
              serviceName: ${ENVIRONMENT}-kn-function-api
              servicePort: 80