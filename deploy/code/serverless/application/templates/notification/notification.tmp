apiVersion: apps/v1
kind: Deployment
metadata:
  name: notification
  namespace: {{ .Values.namespace }}
spec:
  selector:
    matchLabels:
      run: notification
  replicas: 1
  template:
    metadata:
      labels:
        run: notification
    spec:
      containers:
        - name: notification
          image: {{ .Values.containerRepository }}/notification:{{ .Values.dockerVersion }}
          env:
            - name: SERVICE_NAME
              value: smart-agriculture-vernemq
            - name: NAMESPACE_NAME
              value: {{ .Values.namespace }}
            - name: TOPIC_NAME
              value: "$share/notification/iot/farming" # sharing topic "iot/farming between replicas
            - name: PORT
              value: "1883"
            - name: THRESHOLD_TEMPERATURE
              value: "35"
            - name: THRESHOLD_HUMIDITY
              value: "10"
            - name: THRESHOLD_MOISTURE
              value: "70"
            - name: SMTP_PORT
              value: "465"
            - name: SMTP_SERVER
              value: "smtp.gmail.com"
            - name: SENDER_EMAIL
              value: "smartagriculturewithk8s@gmail.com"
            - name: RECEIVER_EMAIL
              value: "ysennoun@xebia.fr"
            - name: SENDER_PASSWORD
              value: "SmartAgricultureWithK8S"
          ports:
            - containerPort: 80
          resources:
            limits:
              cpu: 500m
            requests:
              cpu: 200m

---

apiVersion: v1
kind: Service
metadata:
  name: notification
  namespace: {{ .Values.namespace }}
  labels:
    run: notification
spec:
  ports:
    - port: 80
  selector:
    run: notification

---

apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: notification
  namespace: {{ .Values.namespace }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: notification
  minReplicas: 1
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 50