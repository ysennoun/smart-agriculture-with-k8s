apiVersion: apps/v1
kind: Deployment
metadata:
  name: es-to-parquet-deployment
  namespace: {{ .Values.namespace }}
  labels:
    app: es-to-parquet
spec:
  replicas: 1
  selector:
    matchLabels:
      app: es-to-parquet
  template:
    metadata:
      labels:
        app: es-to-parquet
    spec:
      containers:
        - name: es-to-parquet
          image: {{ .Values.containerRepository }}/spark-es-to-parquet:{{ .Values.dockerVersion }}